@model List<Student>
@if (TempData != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["status"]
    </div>
}



<table class="table table-success table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Surname</th>
            <th scope="col">Class</th>
            <th scope="col">Department</th>
            <th scope="col">Mail</th>
            <th scope="col">Education Time</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.Class</td>
                <td>@item.Department</td>
                <td>@item.Email</td>   
                <td>@item.EducationTime</td>   
                
                <td><a asp-action="Update" asp-controller="Student" asp-route-id="@item.Id">Update</a></td>
                <td><a asp-action="Details" asp-controller="Student" asp-route-id="@item.Id">Details</a></td>
                <td><a asp-action="Delete" asp-controller="Student" asp-route-id="@item.Id">Delete</a></td>
            </tr>
        }

    </tbody>
</table>
<a asp-controller="Student" asp-action="Create" type="button" class="btn btn-primary">Add Student</a>


